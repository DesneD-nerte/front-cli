{
    "compilerOptions": {
        "target": "ES6",
        //        "module": "NodeNext",
        //        "moduleResolution": "NodeNext",
        "module": "Node16",
        "moduleResolution": "Node16",
        "rootDir": "src",
        "outDir": "dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*",
        "src/**/*.json"
    ]
}
